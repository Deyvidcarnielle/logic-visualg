algoritmo "semnome"
// Função :
// Autor :
// Data : 22/07/2023
// Seção de Declarações 
var
carnei: inteiro
resp: caractere

inicio
// Seção de Comandos
resp <- "n"
enquanto (resp="n") faca
escreval("Carneirinhos: ", carnei)
escreval("Eu já dormi? [S/N]")
leia(resp)

se (resp="n") entao
   carnei <- carnei+1
fimse
   
   
fimenquanto
escreval("Carneirinhos: ", carnei)
fimalgoritmo
